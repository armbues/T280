{
	"manifest_version": 2,
	"name": "T280",
	"version": "1.0.0",
	"description": "T280 enables the experimental 280-character mode on twitter.com",

	"permissions": [
		"https://twitter.com/*"
	],

	"content_scripts" : [{
		"matches": ["https://twitter.com/*"],
		"js": ["content.js"],
		"run_at": "document_end"
	}],

	"icons": {
		"16": "icons/t280_16px.png",
		"48": "icons/t280_48px.png",
		"128": "icons/t280_128px.png"
	}
}